@model IEnumerable<LibraryManagementSystem.Models.ViewModels.BookViewModel>

<h2>Kitaplar</h2>

<table>
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Tür</th>
            <th>Yayın Tarihi</th>
            <th>ISBN</th>
            <th>Mevcut Kopyalar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.AuthorFullName</td>
                <td>@book.Genre</td>
                <td>@book.PublishDate.ToShortDateString()</td>
                <td>@book.ISBN</td>
                <td>@book.CopiesAvailable</td>
                <td>
                    <a href="@Url.Action("Details", "Book", new { id = book.Id })">Detaylar</a> |
                    <a href="@Url.Action("Edit", "Book", new { id = book.Id })">Düzenle</a> |
                    <a href="@Url.Action("Delete", "Book", new { id = book.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
